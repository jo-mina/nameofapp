<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
    <%= image_tag(product.image_url, class: "img-responsive")  %>	
     	<div class="caption">
     		<h4><%= product.name %></h4>
    		<h5><%= product.colour %></h5>
    		<h6><%= product.price %></h6>     
        <span class="btn btn-primary btn-colour-change" role="button"><%= link_to 'Show', product %></span>
    		<span class="btn btn-primary btn-colour-change" role="button"><%= link_to 'Edit', edit_product_path(product) %></span>
    		<span class="btn btn-primary btn-colour-change" role="button"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      	</div>
    </div>
</div>

     